<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Moviesblog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="./css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
  <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
  <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
</head>

<body>
  <div class="container-box">
    

    <%- include("../navbar/navbar.ejs") %>

    <%- include("../flash/flash.ejs") %> 
    <div class="container">
      
      <div class="row">
          <div class="col-lg-8 posts-section">
            <% for(let post of allPosts) { %>
              <div class="content-box">
                <div class="img-box mt-2">                        
                              <img src="<%= post.image %>" alt="">                                
                  </div>
        
                  <div class="title mt-2"><h4><%= post.title %></h4></div>
                  <div class="released-date mt-2"><b>Released Date:</b>&nbsp;&nbsp;<%= post.releasedDate %></div>
                  <div class="duration mt-2"><b>Duration:</b>&nbsp;&nbsp;<%= post.duration %></div>
                  <div class="genre mt-2"><b>Genre:</b>&nbsp;&nbsp;<%= post.genre %></div>
                  <div class="language mt-2"><b>Language:</b>&nbsp;&nbsp;<%= post.language %></div>
                  <div class="director mt-2"><b>Directed by:</b>&nbsp;&nbsp;<%= post.director %></div>
                  <div class="producer mt-2"><b>producer:</b>&nbsp;&nbsp;<%= post.producer %></div>
                  <div class="cast mt-2"><b>Actors/Actresses:</b>&nbsp;&nbsp;<%= post.cast %></div>
                  <div class="description mt-2"><b>Main Story:</b>&nbsp;&nbsp;<%= post.description %></div>

                  <form action="/home/<%= post._id %>">
                      <button class="btn btn-outline-dark mb-4">Readmore</button>
                  </form>
              </div>
            <% } %>
          </div>

          <div class="col-lg-4 sidebar-section">
            <% for(let post of allSidebarPosts) { %>
              <hr>
              <a href="/home/<%= post._id %>">
             <div class="sidebar-section-content">
              <div class="img-box-2">
                
                  <img src="<%= post.image %>" alt="">
                  
             
              </div>

              <div class="content-box-2">
                <div class="title-2"><%= post.title %></div>
                <div class="description-2"><%= post.description %></div>
              </div>
             </div>
            </a>
             <% } %>
          </div>         
      </div>
  </div>

         


  <%- include("../footer/footer.ejs") %> 
  </div>
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    <script src="/js/script.js"></script>
</body>

</html>

